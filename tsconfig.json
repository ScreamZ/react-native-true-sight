{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es2017"],
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "build",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
